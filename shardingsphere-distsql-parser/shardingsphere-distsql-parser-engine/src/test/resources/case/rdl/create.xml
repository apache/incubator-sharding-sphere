<sql-parser-test-cases>
    <create-sharding-table-rule sql-case-id = "create-sharding-table-rule">
        <table name = "t_order">
            <resource name = "ms_group_0" />
            <resource name = "ms_group_1" />
        </table>
        <sharding-colum name="order_id" />
        <type name = "hash_mod" start-index="" stop-index="">
            <propert name ="sharding-count" />
            <generated-key>
                <colum name = "anther_id" />
                <type name = "snowflake">
                    <propert>
                        <name>worker-id</name>
                        <vale>123</vale>
                    </propert>
                </type>
            </generated-key>
        </type>
    </create-sharding-table-rule>

    <create-sharding-binding-table-rule sql-case-id = "create-sharding-binding-table-rule">
        <rules>
            <rule>
                <table name="t_order" />
                <table name="t_order_item" />
            </rule>
            <rule>
                <table name="t_1" />
                <table name="t_2" />
            </rule>
        </rules>
    </create-sharding-binding-table-rule>

    <create-sharding-broadcast-table-rule sql-case-id = "create-sharding-broadcast-table-rule">
        <rules>
            <rule>
                <table name="t_1" />
                <table name="t_2" />
            </rule>
        </rules>
    </create-sharding-broadcast-table-rule>

    <create-static-readwrite-splitting-rule sql-case-id = "create-static-readwrite-splitting-rule">
        <rules>
            <rule>
                <name name="ms_group_0"/>
                <write-resource name ="primary_ds"/>
                <read-resources>
                    <resource name="replica_ds_0" />
                    <resource name="replica_ds_1" />
                </read-resources>
                <type>
                    <name name="random" />
                </type>
            </rule>
        </rules>
    </create-static-readwrite-splitting-rule>

    <create-dynamic-readwrite-splitting-rule sql-case-id = "create-dynamic-readwrite-splitting-rule">
        <rules>
            <rule>
                <name name="ms_group_1"/>
                <auto-aware-resource name="group_0"/>
                <type>
                    <name name="random" />
                    <propert>
                        <name>read_weight</name>
                        <vale>2:1</vale>
                    </propert>
                </type>
            </rule>
        </rules>
    </create-dynamic-readwrite-splitting-rule>

    <create-database-discovery-rule sql-case-id = "create-database-discovery-rule">
        <rule name = "ha_group_0" >
            <resource name = "resource0" />
            <resource name = "resource1" />
            <type name = "mgr">
                <propert>
                    <name name="groupName"/>
                    <vale name = "92504d5b-6dec"/>
                </propert>
                <propert>
                    <name name="keepAliveCron"/>
                    <vale name = ""/>
                </propert>
            </type>
        </rule>

        <rule name = "ha_group_1" >
            <resource name = "resource2" />
            <resource name = "resource3" />
            <type name = "mgr2">
                <propert>
                    <name name="groupName"/>
                    <vale name = "92504d5b-6dec=2"/>
                </propert>
                <propert>
                    <name name="keepAliveCron"/>
                    <vale name = ""/>
                </propert>
            </type>
        </rule>
    </create-database-discovery-rule>

    <create-encrypt-rule sql-case-id = "create-encrypt-rule">
        <rule name = "t_encrypt">
            <colums>
                <colum>
                    <name name="user_id"/>
                    <plan name="user_plain"/>
                    <cipher name="user_cipher"/>
                    <type name = "AES">
                        <propert>
                            <name name="aes-key-value"/>
                            <vale name = "123456abc"/>
                        </propert>
                    </type>
                </colum>
                <colum>
                    <name name="order_id" />
                    <cipher name="order_cipher"/>
                    <type name = "MD5"/>
                </colum>
            </colums>
        </rule>
    </create-encrypt-rule>
</sql-parser-test-cases>